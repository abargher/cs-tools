// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    // AI assistant
    "edit_predictions": {
        "disabled_globs": [
            ".env"
        ]
    },
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-20240620"
        },
        "version": "2"
    },
    // Line formatting
    "preferred_line_length": 80,
    "tab_size": 4,
    "soft_wrap": "preferred_line_length",
    "remove_trailing_whitespace_on_save": true,

    // Font features
    "ui_font_family": "Zed Sans",
    "ui_font_size": 15,
    "buffer_font_size": 13,
    "buffer_font_features": {
        "calt": false
    },

    // Interface
    "show_edit_predictions": false, // AI completions
    "outline_panel": {
        "dock": "right"
    },
    "base_keymap": "VSCode",
    "theme": "One Dark",
    "vim_mode": true,
    "confirm_quit": true,
    "autosave": "on_window_change",
    "format_on_save": "off",

    "inlay_hints": {
      "enabled": true,
      "show_type_hints": true,
      "show_parameter_hints": true,
      "show_other_hints": true
    },

    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },

    // Language overrides
    "languages": {
        "Go": {
            "show_edit_predictions": false,
            "format_on_save": "on"
        },
        "Python": {
            "language_servers": ["!pylsp", "..."],
            "show_edit_predictions": false,
            "format_on_save": "on",
            "hard_tabs": false,
            "tab_size": 4,
            "formatter": [
                {"external": {
                    "command": "black",
                    "arguments": [
                        "--line-length",
                        "80",
                        "-"
                    ]
                }},
                {"external" : {
                    "command": "isort",
                    "arguments": [
                        "-"
                    ]
                }}
            ]
        },
        "Rust": {
            "preferred_line_length": 100,
            "format_on_save": "on",
            "hard_tabs": false,
            "tab_size": 4
        },
        "C": {
            "preferred_line_length": 80,
            "hard_tabs": false,
            "tab_size": 2
        },
        "Make": {
            "hard_tabs": true,
            "tab_size": 8
        },
        "JavaScript": {
            "tab_size": 2
        }

    },
    "lsp": {
        // "rust-analyzer": {
        //     "initialization_options": {
        //         "checkOnSave": {
        //             "command": "clippy" // rust-analyzer.checkOnSave.command
        //         }
        //     }
        // },
        // "pylsp": {
        //    "settings" : {
        //        "python" : {
        //         "pythonPath": "venv/bin/python"
        //        }
        //    }
        // },
        "pyright": {
            "settings": {
                "python":{
                    "analysis": {
                        "diagnosticMode": "workspace",
                        "typeCheckingMode": "strict"
                    },
                    "pythonPath": "venv/bin/python"
                }
            }
        }
    }
}
